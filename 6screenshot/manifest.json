{
    "name": "Test Screenshot Extension",
    "version": "1.2",
    "description": "Demonstrate screenshot functionality in the chrome.tabs api. Note: only works for code.google.com",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "logo.png",
        "default_title": "Take a screen shot!"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "manifest_version": 2
}