{
    "name": "Notification Demo",
    "version": "1.1",
    "description": "Shows off desktop notifications, which are \"toast\" windows that pop up on the desktop.",
    "browser_action": {
        "default_icon": "logo.png"
    },
    "permissions": [
        "notifications"
    ],
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "manifest_version": 2,
    "web_accessible_resources": [
        "logo.png"
    ]
}